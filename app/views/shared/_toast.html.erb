<div id="toast" class="container position-relative" style="z-index: 5000">
  <div data-controller="toast" data-delay="5000"
       class="toast align-items-center text-bg-<%= bootstrap_class_for(msg_type) %> border-0 position-absolute my-2 top-0 end-0"
       role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-body">
      <div class="d-flex justify-content-between align-items-center">
        <%= message %>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
</div>
