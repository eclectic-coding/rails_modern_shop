<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: "login_user"}) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, id: "login_email", autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", id: "login_password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= f.submit t("login_btn"), class: "btn btn-secondary" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("forgot_password_link"), new_password_path(resource_name), class: "shop__links" %>
<% end %>
